<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tvs" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tvsBlue</item>
        <item name="colorPrimaryVariant">@color/tvsBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>
    <style name="Theme.Tvs.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Tvs.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>
    <style name="Theme.Tvs.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >

    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>
    <style name="ToolbarTheme" parent="Theme.Tvs">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="Tool" parent="Theme.Tvs">

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="fabtheme" parent="Widget.Design.FloatingActionButton">
        <item name="colorOnSecondary">@color/white</item>
    </style>

    //spinner
    <style name="CustomDropDownTilStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">#9797A2</item>
        <item name="hintTextColor">@color/tvsBlue</item>
        <item name="boxStrokeColor">@color/tvsBlue</item>
        <item name="colorControlNormal">@color/teal_700</item>
        <item name="colorControlActivated">@color/teal_700</item>
        <item name="colorControlHighlight">@color/teal_700</item>
        <item name="boxCornerRadiusBottomEnd">3dp</item>
        <item name="boxCornerRadiusBottomStart">3dp</item>
        <item name="boxCornerRadiusTopEnd">3dp</item>
        <item name="boxCornerRadiusTopStart">3dp</item>
        <item name="android:textColor"> @color/tvsBlue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomDropDownTilStyleLogin" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextColor">#FFFFFF</item>



        <item name="boxCornerRadiusBottomEnd">3dp</item>
        <item name="boxCornerRadiusBottomStart">3dp</item>
        <item name="boxCornerRadiusTopEnd">3dp</item>
        <item name="boxCornerRadiusTopStart">3dp</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>