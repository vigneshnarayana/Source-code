<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".activity.activitys.OnlinePE">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/tvsBlue"
        app:popupTheme="@style/Theme.Tvs.PopupOverlay"
        android:theme="@style/Tool"
        tools:ignore="MissingConstraints"
        android:elevation="40dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">
    <ImageView
        android:id="@+id/img_tools"
        android:layout_width="160dp"
        android:layout_height="160dp"

        android:src="@drawable/tools"/>
    <ImageView
        android:id="@+id/img_fixture"
        android:layout_marginTop="20dp"
        android:layout_width="160dp"
        android:layout_height="160dp"

        android:src="@drawable/tools1"/>

</LinearLayout>
</LinearLayout>