<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="150dp"
>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/customerSpinnerLayout"
        style="@style/CustomDropDownTilStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Select_Alert_Message"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/customerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:inputType="none"
            android:textAlignment="center"
            android:textSize="20sp"
            app:endIconDrawable="@drawable/arrowdown" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/send1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#1E88E5"
        android:layout_marginTop="15sp"
        android:textSize="20dp"
        app:cornerRadius="20dp"
        android:text="Submit"
        android:drawableEnd="@drawable/send"/>
</LinearLayout>


</LinearLayout>