<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BreakDown">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ti"
            android:gravity="center"
            android:transitionName="logo_image"

            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#04447C"
            android:gravity="center"
            android:text="BreakDown"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/id1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">
                <LinearLayout
                    android:id="@+id/visible"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                        <Chronometer
                            android:id="@+id/chronometeraction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:drawableTop="@drawable/ic_baseline_timer_24"
                            android:textSize="24dp"
                            android:gravity="center_horizontal" />

                </LinearLayout>


        <ImageView
            android:id="@+id/send"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/brokensystem"
            android:textSize="18sp"
            android:textColor="@color/white"/>

                <TextView

                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="BreakDown"
                    android:textAlignment="center"

                    android:textColor="@color/black"
                    android:textSize="25sp" />


<!--                <Button-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Pause"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:onClick="pauseChronomer"/>-->
<!--                <Button-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Reset"-->
<!--                    android:layout_gravity="center"-->

<!--                    android:onClick="resetChronomer"/>-->
                <Button
                    android:id="@+id/btn_problemSolved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#04447C"
                    android:text="Proplem Solved"
                    android:layout_gravity="center"
                    android:onClick="btnBreakdown"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:textSize="30sp" />






        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-60dp"
            android:gravity="center_horizontal"


          >

                <Button
                    android:id="@+id/bt_back_breakdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#04447C"
                    android:text="BACK"
                    android:onClick="btnBreakdown"
                    android:textColor="@color/white"
                    android:textSize="30sp" />



        </LinearLayout>


</LinearLayout>